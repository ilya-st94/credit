<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <ScrollView

        android:layout_width="334dp"
        android:layout_height="185dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993">

        <TextView
            android:id="@+id/raschet"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:background="#B4FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:text="Результат"
            android:textColor="@color/textShadow"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.599" />

    </ScrollView>

    <EditText
        android:id="@+id/pr"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:background="#62A9CA"
        android:fontFamily="sans-serif-black"
        android:hint="% годовых"
        android:inputType="text|numberPassword"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41000003" />

    <EditText
        android:id="@+id/summa"
        android:layout_width="263dp"
        android:layout_height="42dp"
        android:background="#62A9CA"
        android:fontFamily="sans-serif-black"
        android:hint="Сумма кредита"
        android:inputType="text|numberPassword"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.272" />

    <Spinner
        android:id="@+id/spiner"
        android:layout_width="163dp"
        android:layout_height="43dp"
        android:background="#418498"
        android:entries="@array/namearay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <EditText
        android:id="@+id/period"
        android:layout_width="118dp"
        android:layout_height="42dp"
        android:background="#62A9CA"
        android:fontFamily="sans-serif-black"
        android:hint="Срок, месяцев"
        android:inputType="text|numberPassword"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

    <EditText
        android:id="@+id/period2"
        android:layout_width="142dp"
        android:layout_height="42dp"
        android:background="#62A9CA"
        android:fontFamily="sans-serif-black"
        android:hint="Срок, дней(ночей)"
        android:inputType="text|numberPassword"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

    <Button
        android:id="@+id/button"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:background="#418498"
        android:elevation="5dp"
        android:fontFamily="sans-serif-black"
        android:padding="12dp"
        android:shadowColor="@color/textShadow"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="расчет"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558" />


</androidx.constraintlayout.widget.ConstraintLayout>